{
  "name": "@protoapp/server",
  "private": true,
  "version": "1.0.0",
  "description": "TypeScript server for protoapp",
  "main": "dist/index.js",
  "scripts": {
    "check": "tsc --noEmit && eslint src/ test/  --ext .ts,.tsx --max-warnings=0 && prettier --check 'src/**/*.{js,jsx,ts,tsx}'",
    "lint": "eslint src/ test/  --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint --fix src/ test/ --ext .ts,.tsx",
    "format:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx}'",
    "format:write": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "dev": "source .env && tsx --watch src/server.ts",
    "build": "tsc --noEmit && esbuild src/server.ts --bundle --platform=node --external:pg --external:postgres-migrations --external:argon2 --outfile=dist/index.js",
    "test": "vitest"
  },
  "prettier": "@protoapp/prettier-config",
  "dependencies": {
    "@adllang/adl-runtime": "npm:@jsr/adllang__adl-runtime@0.1.2",
    "@protoapp/adl": "workspace:*",
    "argon2": "^0.43.0",
    "change-case": "^5.4.4",
    "dotenv": "^16.5.0",
    "jwt-simple": "^0.5.6",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^12.0.0",
    "kysely": "0.25.0",
    "nanoid": "^5.1.5",
    "pg": "^8.8.0",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@protoapp/prettier-config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-passport": "^4.0.3",
    "@types/koa-router": "^7.4.4",
    "@types/koa-session": "^6.4.5",
    "@types/node": "^18.11.11",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.34",
    "@types/pg": "^8.6.5",
    "esbuild": "^0.15.18",
    "eslint": "^9.21.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "catalog:",
    "tsx": "^3.14.0",
    "typescript": "catalog:",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.1.1"
  }
}
